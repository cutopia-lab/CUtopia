{
  "name": "cutopia",
  "version": "1.0.0",
  "workspaces": [
    "types",
    "frontend",
    "backend"
  ],
  "private": true,
  "description": "CUtopia is a course review and timetable planning website for CUHK students.",
  "repository": "https://github.com/cutility/CUtopia.git",
  "license": "MIT",
  "scripts": {
    "fe": "yarn workspace cutopia-frontend",
    "be": "yarn workspace cutopia-backend",
    "types": "yarn workspace cutopia-types",
    "prepare": "yarn husky install && yarn load-data && yarn fe prepare",
    "load-data": "git submodule update --init",
    "upgrade-data": "git submodule update --init --remote && yarn fe move-data",
    "test": "jest",
    "postinstall": "yarn types build"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/loader-utils": "^2.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": ">=11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
