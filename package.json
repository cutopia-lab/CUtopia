{
  "name": "cutopia",
  "version": "1.0.0",
  "workspaces": [
    "types",
    "frontend",
    "backend"
  ],
  "private": true,
  "description": "CUtopia is a course review and timetable planning website for CUHK students.",
  "repository": "https://github.com/cutility/CUtopia.git",
  "license": "MIT",
  "scripts": {
    "fe": "yarn workspace cutopia-frontend",
    "be": "yarn workspace cutopia-backend",
    "types": "yarn workspace cutopia-types",
    "bootstrap": "yarn && yarn be bootstrap",
    "prepare": "yarn husky install && yarn load-data",
    "load-data": "git submodule update --init --remote && yarn mount-data",
    "mount-data": "yarn fe prepare && yarn be prepare",
    "build:fe": "yarn fe build",
    "test": "jest",
    "postinstall": "yarn types build",
    "reinstall": "rm yarn.lock && lerna clean --yes && yarn"
  },
  "devDependencies": {
    "@types/nprogress": "^0.2.0",
    "@types/pluralize": "^0.0.29",
    "@types/jest": "^28.1.6",
    "@types/loader-utils": "^2.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "lerna": "^5.4.3",
    "lint-staged": ">=11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
